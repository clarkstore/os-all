<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.clarkstore</groupId>
    <artifactId>os-common-bom</artifactId>
    <packaging>pom</packaging>
    <version>${onestop.version}</version>
    <description>onestop公共版本控制</description>

    <properties>
        <onestop.version>0.3.3</onestop.version>
        <java.version>8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spring-boot.version>2.4.5</spring-boot.version>
        <hutool.version>5.6.4</hutool.version>
        <druid.version>1.2.6</druid.version>
        <mysql-connector-java.version>8.0.23</mysql-connector-java.version>
        <mybatis-plus.version>3.4.2</mybatis-plus.version>
        <java-jwt.version>3.12.0</java-jwt.version>
        <!--公共模块-->
        <javax-mail.version>1.4.7</javax-mail.version>
        <!--azure-storage模块-->
        <azure-storage.version>8.6.6</azure-storage.version>
        <!--微信模块-->
        <wx-java.version>4.0.0</wx-java.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!--os-common-->
            <dependency>
                <groupId>com.github.clarkstore</groupId>
                <artifactId>os-common-core</artifactId>
                <version>${onestop.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.clarkstore</groupId>
                <artifactId>os-common-azure</artifactId>
                <version>${onestop.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.clarkstore</groupId>
                <artifactId>os-common-mybatis</artifactId>
                <version>${onestop.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.clarkstore</groupId>
                <artifactId>os-common-task</artifactId>
                <version>${onestop.version}</version>
            </dependency>
            <!--os-wx-->
            <dependency>
                <groupId>com.github.clarkstore</groupId>
                <artifactId>os-wx-mini</artifactId>
                <version>${onestop.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.clarkstore</groupId>
                <artifactId>os-wx-mp</artifactId>
                <version>${onestop.version}</version>
            </dependency>
            <!--第三方-->
            <!--web 模块-->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-web</artifactId>
                <version>${spring-boot.version}</version>
            </dependency>
            <!-- 引入Actuator监控依赖 -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-actuator</artifactId>
                <version>${spring-boot.version}</version>
            </dependency>
            <!--添加huTool-->
            <dependency>
                <groupId>cn.hutool</groupId>
                <artifactId>hutool-all</artifactId>
                <version>${hutool.version}</version>
            </dependency>
             <!--Mail-->
            <dependency>
                <groupId>javax.mail</groupId>
                <artifactId>mail</artifactId>
                <version>${javax-mail.version}</version>
            </dependency>
            <!-- Jwt -->
            <dependency>
                <groupId>com.auth0</groupId>
                <artifactId>java-jwt</artifactId>
                <version>${java-jwt.version}</version>
            </dependency>
            <!--Azure storage-->
            <dependency>
                <groupId>com.microsoft.azure</groupId>
                <artifactId>azure-storage</artifactId>
                <version>${azure-storage.version}</version>
            </dependency>
            <!--微信依赖-->
            <dependency>
                <groupId>com.github.binarywang</groupId>
                <artifactId>weixin-java-miniapp</artifactId>
                <version>${wx-java.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.binarywang</groupId>
                <artifactId>weixin-java-mp</artifactId>
                <version>${wx-java.version}</version>
            </dependency>
            <!--mysql-->
            <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql-connector-java.version}</version>
            </dependency>
            <!--alibaba连接池-->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid-spring-boot-starter</artifactId>
                <version>${druid.version}</version>
            </dependency>
            <!-- mybatis-plus begin -->
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-boot-starter</artifactId>
                <version>${mybatis-plus.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <pluginRepositories>
        <pluginRepository>
            <id>aliyun-plugin</id>
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
</project>
